import React from 'react';
{{#if useAntd}}
import { {{antdComponents}} } from 'antd';
{{/if}}
{{#if hasStyles}}
import styled from 'styled-components';
{{/if}}

/**
 * @component {{componentName}}
 * @description {{description}}
 * @category {{category}}
 {{#each props}}
 * @param {{ '{{' }}{{type}}{{ '}}' }} {{name}} - {{description}}
 {{/each}}
 * @example
 * <{{componentName}} 
 {{#each props}}
 *   {{name}}={{ '{{' }}{{example}}{{ '}}' }}
 {{/each}}
 * />
 */
interface {{componentName}}Props {
{{#each props}}
  {{name}}{{#if optional}}?{{/if}}: {{type}};
{{/each}}
}

{{#if hasStyles}}
const Styled{{componentName}} = styled.div`
  {{styles}}
`;
{{/if}}

export const {{componentName}}: React.FC<{{componentName}}Props> = ({
{{#each props}}
  {{name}}{{#if defaultValue}} = {{defaultValue}}{{/if}},
{{/each}}
}) => (
  {{#if hasStyles}}
  <Styled{{componentName}}>
  {{else}}
  <div data-testid="{{kebabName}}">
  {{/if}}
    {{#if useAntd}}
    {{antdJsx}}
    {{else}}
    <h2>{{componentName}}</h2>
    {{#each props}}
    <p>{{name}}: {{ '{{' }}{{name}}{{ '}}' }}</p>
    {{/each}}
    {{/if}}
  {{#if hasStyles}}
  </Styled{{componentName}}>
  {{else}}
  </div>
  {{/if}}
);