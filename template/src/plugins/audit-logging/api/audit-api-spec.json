{
  "openapi": "3.0.3",
  "info": {
    "title": "Audit Logging API",
    "description": "API specification for audit logging operations",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/api",
      "description": "API server"
    }
  ],
  "paths": {
    "/audit/logs": {
      "get": {
        "summary": "Get paginated audit logs",
        "description": "Retrieve audit logs with filtering, pagination, and sorting",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "default": 1
            }
          },
          {
            "name": "pageSize",
            "in": "query",
            "description": "Number of items per page",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 100,
              "default": 20
            }
          },
          {
            "name": "sortBy",
            "in": "query",
            "description": "Field to sort by",
            "schema": {
              "type": "string",
              "enum": ["timestamp", "action", "resource", "status", "severity"],
              "default": "timestamp"
            }
          },
          {
            "name": "sortOrder",
            "in": "query",
            "description": "Sort order",
            "schema": {
              "type": "string",
              "enum": ["asc", "desc"],
              "default": "desc"
            }
          },
          {
            "name": "userId",
            "in": "query",
            "description": "Filter by user ID",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "action",
            "in": "query",
            "description": "Filter by action",
            "schema": {
              "$ref": "#/components/schemas/AuditAction"
            }
          },
          {
            "name": "resource",
            "in": "query",
            "description": "Filter by resource",
            "schema": {
              "$ref": "#/components/schemas/AuditResource"
            }
          },
          {
            "name": "status",
            "in": "query",
            "description": "Filter by status",
            "schema": {
              "$ref": "#/components/schemas/AuditStatus"
            }
          },
          {
            "name": "severity",
            "in": "query",
            "description": "Filter by severity",
            "schema": {
              "$ref": "#/components/schemas/AuditSeverity"
            }
          },
          {
            "name": "tenantId",
            "in": "query",
            "description": "Filter by tenant ID",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "search",
            "in": "query",
            "description": "Search term",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "startDate",
            "in": "query",
            "description": "Filter by start date",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "endDate",
            "in": "query",
            "description": "Filter by end date",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaginatedAuditLogsResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create audit log",
        "description": "Create a new audit log entry",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateAuditLogRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Audit log created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateAuditLogResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Clear all audit logs",
        "description": "Delete all audit log entries",
        "responses": {
          "204": {
            "description": "All audit logs cleared successfully"
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/audit/logs/{id}": {
      "get": {
        "summary": "Get audit log by ID",
        "description": "Retrieve a specific audit log by its ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Audit log ID",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuditLog"
                }
              }
            }
          },
          "404": {
            "description": "Audit log not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/audit/logs/export": {
      "post": {
        "summary": "Export audit logs",
        "description": "Export audit logs in various formats",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ExportAuditLogsRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful export",
            "content": {
              "text/csv": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              },
              "application/json": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              },
              "application/vnd.ms-excel": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/audit/stats": {
      "get": {
        "summary": "Get audit statistics",
        "description": "Retrieve audit log statistics and analytics",
        "parameters": [
          {
            "name": "userId",
            "in": "query",
            "description": "Filter by user ID",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "action",
            "in": "query",
            "description": "Filter by action",
            "schema": {
              "$ref": "#/components/schemas/AuditAction"
            }
          },
          {
            "name": "resource",
            "in": "query",
            "description": "Filter by resource",
            "schema": {
              "$ref": "#/components/schemas/AuditResource"
            }
          },
          {
            "name": "status",
            "in": "query",
            "description": "Filter by status",
            "schema": {
              "$ref": "#/components/schemas/AuditStatus"
            }
          },
          {
            "name": "severity",
            "in": "query",
            "description": "Filter by severity",
            "schema": {
              "$ref": "#/components/schemas/AuditSeverity"
            }
          },
          {
            "name": "tenantId",
            "in": "query",
            "description": "Filter by tenant ID",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "search",
            "in": "query",
            "description": "Search term",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "startDate",
            "in": "query",
            "description": "Filter by start date",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "endDate",
            "in": "query",
            "description": "Filter by end date",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuditStats"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/audit/logs/reset": {
      "post": {
        "summary": "Reset audit logs to default state",
        "description": "Reset audit logs to default mock data (development only)",
        "responses": {
          "204": {
            "description": "Audit logs reset successfully"
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AuditAction": {
        "type": "string",
        "enum": [
          "LOGIN", "LOGOUT", "LOGIN_FAILED", "PASSWORD_RESET",
          "CREATE", "UPDATE", "DELETE", "VIEW", "EXPORT", "IMPORT",
          "TENANT_CREATED", "TENANT_UPDATED", "TENANT_DELETED", "TENANT_SWITCHED",
          "USER_INVITED", "USER_ACTIVATED", "USER_DEACTIVATED", "USER_ROLE_CHANGED",
          "SETTINGS_UPDATED", "PERMISSION_CHANGED",
          "API_KEY_CREATED", "API_KEY_REVOKED",
          "SYSTEM_ERROR", "SYSTEM_WARNING"
        ]
      },
      "AuditResource": {
        "type": "string",
        "enum": [
          "user", "tenant", "document", "settings", "api_key", "role", "permission", "notification", "report", "system"
        ]
      },
      "AuditStatus": {
        "type": "string",
        "enum": ["success", "failure", "warning"]
      },
      "AuditSeverity": {
        "type": "string",
        "enum": ["low", "medium", "high", "critical"]
      },
      "AuditLog": {
        "type": "object",
        "required": ["id", "timestamp", "userId", "userName", "userEmail", "tenantId", "action", "resource", "status", "severity"],
        "properties": {
          "id": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "userId": {
            "type": "string"
          },
          "userName": {
            "type": "string"
          },
          "userEmail": {
            "type": "string",
            "format": "email"
          },
          "tenantId": {
            "type": "string"
          },
          "tenantName": {
            "type": "string"
          },
          "action": {
            "$ref": "#/components/schemas/AuditAction"
          },
          "resource": {
            "$ref": "#/components/schemas/AuditResource"
          },
          "resourceId": {
            "type": "string"
          },
          "resourceName": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "metadata": {
            "type": "object",
            "additionalProperties": true
          },
          "changes": {
            "type": "object",
            "properties": {
              "before": {
                "type": "object",
                "additionalProperties": true
              },
              "after": {
                "type": "object",
                "additionalProperties": true
              }
            }
          },
          "ipAddress": {
            "type": "string"
          },
          "userAgent": {
            "type": "string"
          },
          "location": {
            "type": "object",
            "properties": {
              "country": {
                "type": "string"
              },
              "city": {
                "type": "string"
              }
            }
          },
          "status": {
            "$ref": "#/components/schemas/AuditStatus"
          },
          "severity": {
            "$ref": "#/components/schemas/AuditSeverity"
          },
          "errorMessage": {
            "type": "string"
          },
          "duration": {
            "type": "integer",
            "description": "Duration in milliseconds"
          },
          "traceId": {
            "type": "string"
          }
        }
      },
      "PaginatedAuditLogsResponse": {
        "type": "object",
        "required": ["data", "total", "page", "pageSize", "totalPages"],
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/AuditLog"
            }
          },
          "total": {
            "type": "integer"
          },
          "page": {
            "type": "integer"
          },
          "pageSize": {
            "type": "integer"
          },
          "totalPages": {
            "type": "integer"
          }
        }
      },
      "CreateAuditLogRequest": {
        "type": "object",
        "required": ["userId", "userName", "userEmail", "tenantId", "action", "resource", "status", "severity"],
        "properties": {
          "userId": {
            "type": "string"
          },
          "userName": {
            "type": "string"
          },
          "userEmail": {
            "type": "string",
            "format": "email"
          },
          "tenantId": {
            "type": "string"
          },
          "tenantName": {
            "type": "string"
          },
          "action": {
            "$ref": "#/components/schemas/AuditAction"
          },
          "resource": {
            "$ref": "#/components/schemas/AuditResource"
          },
          "resourceId": {
            "type": "string"
          },
          "resourceName": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "metadata": {
            "type": "object",
            "additionalProperties": true
          },
          "changes": {
            "type": "object",
            "properties": {
              "before": {
                "type": "object",
                "additionalProperties": true
              },
              "after": {
                "type": "object",
                "additionalProperties": true
              }
            }
          },
          "ipAddress": {
            "type": "string"
          },
          "userAgent": {
            "type": "string"
          },
          "location": {
            "type": "object",
            "properties": {
              "country": {
                "type": "string"
              },
              "city": {
                "type": "string"
              }
            }
          },
          "status": {
            "$ref": "#/components/schemas/AuditStatus"
          },
          "severity": {
            "$ref": "#/components/schemas/AuditSeverity"
          },
          "errorMessage": {
            "type": "string"
          },
          "duration": {
            "type": "integer",
            "description": "Duration in milliseconds"
          },
          "traceId": {
            "type": "string"
          }
        }
      },
      "CreateAuditLogResponse": {
        "type": "object",
        "required": ["id", "success"],
        "properties": {
          "id": {
            "type": "string"
          },
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "ExportAuditLogsRequest": {
        "type": "object",
        "required": ["format"],
        "properties": {
          "format": {
            "type": "string",
            "enum": ["csv", "json", "excel"]
          },
          "filters": {
            "type": "object",
            "properties": {
              "userId": {
                "type": "string"
              },
              "action": {
                "$ref": "#/components/schemas/AuditAction"
              },
              "resource": {
                "$ref": "#/components/schemas/AuditResource"
              },
              "status": {
                "$ref": "#/components/schemas/AuditStatus"
              },
              "severity": {
                "$ref": "#/components/schemas/AuditSeverity"
              },
              "tenantId": {
                "type": "string"
              },
              "search": {
                "type": "string"
              },
              "startDate": {
                "type": "string",
                "format": "date-time"
              },
              "endDate": {
                "type": "string",
                "format": "date-time"
              }
            }
          },
          "columns": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "AuditStats": {
        "type": "object",
        "required": ["totalLogs", "successCount", "failureCount", "warningCount", "topActions", "topUsers", "recentActivity"],
        "properties": {
          "totalLogs": {
            "type": "integer"
          },
          "successCount": {
            "type": "integer"
          },
          "failureCount": {
            "type": "integer"
          },
          "warningCount": {
            "type": "integer"
          },
          "topActions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "action": {
                  "$ref": "#/components/schemas/AuditAction"
                },
                "count": {
                  "type": "integer"
                }
              }
            }
          },
          "topUsers": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "userId": {
                  "type": "string"
                },
                "userName": {
                  "type": "string"
                },
                "count": {
                  "type": "integer"
                }
              }
            }
          },
          "recentActivity": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/AuditLog"
            }
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "required": ["error", "message"],
        "properties": {
          "error": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "details": {
            "type": "object",
            "additionalProperties": true
          }
        }
      }
    }
  }
}