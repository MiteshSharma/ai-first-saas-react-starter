{
  "openapi": "3.0.3",
  "info": {
    "title": "Workspace Management API",
    "description": "API for managing workspaces within tenants - simplified for core workspace operations only",
    "version": "1.0.0",
    "contact": {
      "name": "API Support",
      "email": "api@example.com"
    }
  },
  "servers": [
    {
      "url": "https://api.example.com/v1",
      "description": "Production server"
    },
    {
      "url": "http://localhost:3001/api",
      "description": "Development server"
    }
  ],
  "tags": [
    {
      "name": "Workspaces",
      "description": "Core workspace management operations"
    }
  ],
  "paths": {
    "/tenants/{tenantId}/workspaces": {
      "get": {
        "tags": ["Workspaces"],
        "summary": "List workspaces for a tenant",
        "description": "Retrieve all workspaces belonging to a specific tenant with optional filtering",
        "operationId": "listWorkspaces",
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "description": "The ID of the tenant",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "status",
            "in": "query",
            "description": "Filter by workspace status",
            "schema": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["active", "archived"]
              }
            }
          },
          {
            "name": "type",
            "in": "query",
            "description": "Filter by workspace type",
            "schema": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["project", "department", "team", "client"]
              }
            }
          },
          {
            "name": "search",
            "in": "query",
            "description": "Search workspaces by name or description",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Workspace"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Workspaces"],
        "summary": "Create a new workspace",
        "description": "Create a new workspace within the specified tenant",
        "operationId": "createWorkspace",
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "description": "The ID of the tenant",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateWorkspacePayload"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Workspace created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Workspace"
                }
              }
            }
          }
        }
      }
    },
    "/workspaces/{workspaceId}": {
      "get": {
        "tags": ["Workspaces"],
        "summary": "Get workspace details",
        "description": "Retrieve detailed information about a specific workspace",
        "operationId": "getWorkspace",
        "parameters": [
          {
            "name": "workspaceId",
            "in": "path",
            "required": true,
            "description": "The ID of the workspace",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Workspace"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Workspaces"],
        "summary": "Update workspace",
        "description": "Update workspace information",
        "operationId": "updateWorkspace",
        "parameters": [
          {
            "name": "workspaceId",
            "in": "path",
            "required": true,
            "description": "The ID of the workspace",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateWorkspacePayload"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Workspace updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Workspace"
                }
              }
            }
          }
        }
      }
    },
    "/workspaces/{workspaceId}/settings": {
      "put": {
        "tags": ["Workspaces"],
        "summary": "Update workspace settings",
        "description": "Update workspace-specific settings",
        "operationId": "updateWorkspaceSettings",
        "parameters": [
          {
            "name": "workspaceId",
            "in": "path",
            "required": true,
            "description": "The ID of the workspace",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/WorkspaceSettings"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Settings updated successfully"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Workspace": {
        "type": "object",
        "required": ["id", "tenantId", "name", "status", "createdAt", "updatedAt"],
        "properties": {
          "id": {
            "type": "string",
            "example": "workspace-uuid-123"
          },
          "tenantId": {
            "type": "string",
            "example": "tenant-uuid-456"
          },
          "name": {
            "type": "string",
            "example": "Marketing Team"
          },
          "description": {
            "type": "string",
            "nullable": true,
            "example": "Workspace for marketing team collaboration"
          },
          "type": {
            "type": "string",
            "enum": ["project", "department", "team", "client"],
            "example": "team"
          },
          "status": {
            "type": "string",
            "enum": ["active", "archived"],
            "example": "active"
          },
          "settings": {
            "$ref": "#/components/schemas/WorkspaceSettings"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "example": "2024-01-01T00:00:00Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "example": "2024-01-15T10:30:00Z"
          }
        }
      },
      "WorkspaceSettings": {
        "type": "object",
        "properties": {
          "visibility": {
            "type": "string",
            "enum": ["public", "private"],
            "example": "private"
          },
          "allowInvitations": {
            "type": "boolean",
            "example": true
          },
          "defaultRole": {
            "type": "string",
            "enum": ["viewer", "editor", "admin"],
            "example": "editor"
          },
          "timezone": {
            "type": "string",
            "example": "America/New_York"
          }
        }
      },
      "CreateWorkspacePayload": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "example": "New Workspace"
          },
          "description": {
            "type": "string",
            "nullable": true,
            "example": "Description of the workspace"
          },
          "type": {
            "type": "string",
            "enum": ["project", "department", "team", "client"],
            "example": "team"
          },
          "settings": {
            "$ref": "#/components/schemas/WorkspaceSettings"
          }
        }
      },
      "UpdateWorkspacePayload": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Updated Workspace Name"
          },
          "description": {
            "type": "string",
            "nullable": true,
            "example": "Updated description"
          },
          "type": {
            "type": "string",
            "enum": ["project", "department", "team", "client"],
            "example": "project"
          },
          "status": {
            "type": "string",
            "enum": ["active", "archived"],
            "example": "active"
          }
        }
      }
    }
  },
  "security": [
    {
      "BearerAuth": []
    },
    {
      "TenantHeader": []
    }
  ]
}