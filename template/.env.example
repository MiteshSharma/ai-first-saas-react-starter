# AI-First React App - Environment Variables Template
# Copy this file to .env.local for local development

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# Application Environment (development, staging, production)
REACT_APP_ENV=development

# API Configuration
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_USE_MOCK_API=true
REACT_APP_API_TIMEOUT=10000

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Token Configuration
REACT_APP_JWT_EXPIRY=3600
REACT_APP_REFRESH_TOKEN_EXPIRY=604800

# Security Headers
REACT_APP_CSP_ENABLED=true
REACT_APP_HSTS_ENABLED=true

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Performance Monitoring
REACT_APP_PERFORMANCE_MONITORING=true
REACT_APP_WEB_VITALS_ENDPOINT=

# Analytics
REACT_APP_ANALYTICS_ID=
REACT_APP_GTM_ID=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Development Features
REACT_APP_DEBUG_MODE=true
REACT_APP_SHOW_DEV_TOOLS=true

# Feature Toggles
REACT_APP_FEATURE_USER_MANAGEMENT=true
REACT_APP_FEATURE_ADVANCED_SEARCH=false
REACT_APP_FEATURE_EXPORT_DATA=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Storage Configuration
REACT_APP_STORAGE_BUCKET=
REACT_APP_CDN_URL=

# Third-party Services
REACT_APP_STRIPE_PUBLISHABLE_KEY=
REACT_APP_GOOGLE_MAPS_API_KEY=

# =============================================================================
# BUILD & DEPLOYMENT
# =============================================================================

# Build Configuration
GENERATE_SOURCEMAP=true
REACT_APP_VERSION=$npm_package_version
REACT_APP_BUILD_TIME=

# PWA Configuration
REACT_APP_PWA_ENABLED=false
REACT_APP_OFFLINE_SUPPORT=false